<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    android:id="@+id/color_screen">

    <Spinner
        android:id="@+id/modes_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/modes_array"
        android:prompt="@string/mode_prompt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">
    </Spinner>

    <Button
        android:id="@+id/commit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Ãœbernehmen"
        android:textAlignment="center" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_below="@id/modes_dropdown"
        android:layout_above="@id/commit_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>