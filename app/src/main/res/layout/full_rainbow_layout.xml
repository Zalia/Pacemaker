<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/full_rainbow_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schnelligkeit"
        android:padding="10dp"/>
    <SeekBar
        android:id="@+id/rainbow_speed_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helligkeit"
        android:padding="10dp"/>
    <SeekBar
        android:id="@+id/rainbow_brightness_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regenbogigkeit"
        android:padding="10dp"/>
    <SeekBar
        android:id="@+id/rainbow_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>